<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp</title>
    <h1 class="main-header">Music App</h1>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <ul class="sign-in-nav">
        <% if logged_in? %>
        <li class="signed-in">Signed in as <%= current_user.email %></li>
        <li><%= link_to 'Sign Out', session_url, method: 'DELETE' %></li>
        <% else %>
        <li><%= link_to 'Sign In', new_session_url, method: 'GET' %></li>
        <li><%= link_to 'Sign Up', new_user_url, method: 'GET' %></li>
        <% end %>
      </ul>
    </nav>
    <br>
    <%= yield %>
  </body>
</html>
